//- category.html
extends includes/layout

block title
    title Woo4men - Nos chemises   

block header
    - var current = { category1: 'focus' }
    include includes/header.jade 

block content
    div.band__filtre--bottom
        div.arrow
            div.arrow-up--color
            div.arrow-up--white
        div.filter__nav-menu.gamma-spacing--after.gamma-spacing--before
            span
                a(href="category-men-chemise.html").navigation__filtre Chemises
            span
                a(href="category-men-pull.html").navigation__filtre Pulls
            span
                a(href="category-men-polo.html").navigation__filtre Polos
            
        
    - var numberItem = 0
    
    section.beta-spacing--before.beta-spacing--after
        h3.hiddenTitle Page catégorie de Woo4men
        while numberItem < 4
            section.inline-block.article
                a(href="product.html").removeLink
                    div.article__title
                        h4.gamma Chemise
                    div.article__img
                        img(src="../css/images/mockUp/chemise.png", alt="Présentation d'une chemise").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -33%
                        div.information__price
                            span.block.information__price--newPrice 33,50 €    
                            span.block.information__price--oldPrice 50,00 €    
            section.inline-block.article
                a(href="product.html").removeLink
                    div.article__title
                        h4.gamma Pull
                    div.article__img
                        img(src="../css/images/mockUp/pull.png", alt="Présentation d'un pull").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -10%
                        div.information__price
                            span.block.information__price--newPrice 45,00 €    
                            span.block.information__price--oldPrice 50,00 €    
            section.inline-block.article
                a(href="product.html").removeLink
                    div.article__title
                        h4.gamma Polo
                    div.article__img
                        img(src="../css/images/mockUp/polo.png", alt="Présentation d'un polo").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -50%
                        div.information__price
                            span.block.information__price--newPrice 25,00 €    
                            span.block.information__price--oldPrice 50,00 €    
            - numberItem++

block footer
    include includes/footer.jade
                                        
block script
    include includes/script.jade
