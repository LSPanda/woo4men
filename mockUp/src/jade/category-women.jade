// - category.html

extends includes/layout

block title
    title Woo4men - Nos chemises   

block header
    - var current = { category2: 'focus' }
    include includes/header.jade 

block content
    div.band__filtre--bottom
        div.arrow
            div.arrow-up__women--color
            div.arrow-up__women--white
        div.filter__nav-menu--women.gamma-spacing--after.gamma-spacing--before
            span
                a(href="category-women-chemise.html").navigation__filtre Chemises
            span
                a(href="category-women-pull.html").navigation__filtre Pulls
            span
                a(href="category-women-polo.html").navigation__filtre Polos
        
    - var numberItem = 0
    
    section.beta-spacing--before.beta-spacing--after
        h3.woo4menHidden Page catégorie de Woo4men
        while numberItem < 4
            section.article.one-quarter
                a(href="product.html").cleanLink
                    div.article__title
                        h1.gamma Chemise
                    div.article__img
                        img(src="../css/images/chemise.jpg", alt="Présentation d'une chemise").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -33%
                        div.information__price
                            span.information__price--newPrice 33,50 €    
                            span.information__price--oldPrice 50,00 €    
            section.article.one-quarter
                a(href="product.html").cleanLink
                    div.article__title
                        h1.gamma Pull
                    div.article__img
                        img(src="../css/images/pull.jpg", alt="Présentation d'un pull").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -10%
                        div.information__price
                            span.information__price--newPrice 45,00 €    
                            span.information__price--oldPrice 50,00 €    
            section.article.one-quarter
                a(href="product.html").cleanLink
                    div.article__title
                        h1.gamma Polo
                    div.article__img
                        img(src="../css/images/polo.jpg", alt="Présentation d'un polo").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -50%
                        div.information__price
                            span.information__price--newPrice 25,00 €    
                            span.information__price--oldPrice 50,00 €    
            - numberItem++
                                        
