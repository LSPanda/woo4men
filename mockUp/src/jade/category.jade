// - category.html

extends includes/layout

block title
    title Woo4men - Nos chemises   

block header
    - var current = { category: 'focus' }
    include includes/header.jade 

block content
    div.filtre__nav-menu.band__filtre--bottom.beta-spacing--before
        div.beta-spacing--after
            span
                a(href="#").navigation__filtre.navigation__focus Chemises
            span
                a(href="#").navigation__filtre Pulls
            span
                a(href="#").navigation__filtre Polos
        
    - var numberItem = 0
    
    section.beta-spacing--before.beta-spacing--after
        h3.woo4menHidden Page catégorie de Woo4men
        while numberItem < 8
            section.article.one-quarter
                a(href="#").cleanLink
                    div.article__title
                        h1.gamma Jolie chemise
                    div.article__img
                        img(src="../css/images/chemise.jpg", alt="Présentation d'une chemise").one-whole
                    div.article__body
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    div.information.clearfix
                        div.information__promo
                            span -33%
                        div.information__price
                            span.information__price--newPrice 33,10 €    
                            span.information__price--oldPrice 50,00 €    
            - numberItem++
                                        
