// - includes/header.jade

header.header.band--bottom
    div.header__logo-login-panier.alpha-spacing--after.clearfix
        div.header__logo
            a(href="index.html")
                img(src="css/images/logoNoel.png", alt="Logo spécial Noël de Woo4men")
            h1.woo4menHidden Woo4men, vente de vêtement en ligne
        div.header__login-panier
            div.header__login
                p
                    | Bienvenue, 
                    a(href="#").woo4menLink connecter vous.
            div.header__panier.box--grey
                p
                    span 0 
                    | article(s) - 
                    span 0,00 €
                a(href="#").woo4menLink Commander
    div.header__nav-menu-search.beta-spacing--after.clearfix
        nav.header__nav-menu
            h2.woo4menHidden Menu de navigation de Woo4men
            span.nav-menu__list-item
                a(href="#").nav-menu__link Accueil
            span.nav-menu__list-item
                a(href="#").nav-menu__link Homme
            span.nav-menu__list-item
                a(href="#").nav-menu__link Femme
            span.nav-menu__list-item
                a(href="#").nav-menu__link Point de vente
            span.nav-menu__list-item
                a(href="#").nav-menu__link Contact
        div.header__search
            form.search
                input(type="text", placeholder="Rechercher...").search__seek.forms__input--pattern
                input(type="submit", value="Rechercher un article sur Woo4men").search.validate.search__validate
