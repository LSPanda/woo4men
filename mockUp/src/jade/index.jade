//- index.html
extends includes/layout

block title
    title Woo4men - Accueil 

block style
    link(rel="stylesheet" href="css/main.css")

block header
    - var current = { accueil: 'focus' }
    include includes/header.jade 

block content
    section(itemscope itemtype="http://schema.org/WebPage").beta-spacing--before.beta-spacing--after
        h2(itemprop="headline").hiddenTitle Page d'accueil de Woo4men
        section.one-whole
            h3(itemprop="headline").hiddenTitle Articles en promotion chez Woo4men
            a(itemprop="url" href="html/category-women.html")
                img(itemprop="image" src="css/images/mockUp/slide.jpg", alt="Promotions spécial Noêl de Woo4men").one-whole
        div.gamma-spacing--before
            section.inline-block.linkCategory
                h3(itemprop="headline").hiddenTitle Chemises de Woo4men
                a(itemprop="url" href="html/category-men-chemise.html")
                    figure.linkCategory__figure
                        img(itemprop="image" src="css/images/mockUp/SlideChemise.jpg", alt="Accès aux Chemises de Woo4men").one-whole
                        figcaption.linkCategory__figcaption Chemise
            section.inline-block.linkCategory
                h3(itemprop="headline").hiddenTitle Polos de Woo4men
                a(itemprop="url" href="html/category-men-polo.html")
                    figure.linkCategory__figure
                        img(itemprop="image" src="css/images/mockUp/SlidePolo.jpg", alt="Accès aux Polos de Woo4men").one-whole
                        figcaption.linkCategory__figcaption Polos
            section.inline-block.linkCategory
                h3(itemprop="headline").hiddenTitle Pulls de Woo4men
                a(itemprop="url" href="html/category-men-pull.html")
                    figure.linkCategory__figure
                        img(itemprop="image" src="css/images/mockUp/SlidePull.jpg", alt="Accès aux Pulls de Woo4men").one-whole
                        figcaption.linkCategory__figcaption Pulls

block footer
    include includes/footer.jade

block script
    include includes/script.jade
