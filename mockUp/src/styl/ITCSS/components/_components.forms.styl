// - Style for my forms
.form
    rem-fallback( margin, 36px 0 )
.form__element
    width 50%
    padding 0 2.5%
    rem-fallback( margin-bottom, 28px )
    +media-query( screen, max-width 590px )
        width 100%
.forms__input--pattern
    width 100%
    color wf_form-color
    border 1px solid wf_background-boxes
    rem-fallback( padding, 12px 16px )
    &:focus
        background wf_form-background-color-focus
.form__element--fullSize
    width 100%
    padding 0 2.5%
    rem-fallback( margin-bottom, 28px )
.label__text
    display block
    rem-fallback( margin, 10px 0 )
.form__submit
    width 100%
    font-family wf_font-heading
    rem-fallback( font-size, 14px )
    text-transform uppercase
    color wf_form-color-submit
    background wf_form-background-submit
    rem-fallback( padding, 10px 16px )
    border none
    cursor pointer
    transition( all, 0.25s )
    &:hover
        background wf_form-background-submit-hover

.search
    position relative
    +media-query( screen, max-width 940px )
        width 100%
        rem-fallback( margin-bottom, 14px )
.search__seek
    rem-fallback( font-size, 14px )
    rem-fallback( min-width, 265px )
    +media-query( screen, max-width 940px )
        rem-fallback( margin-top, 8px )
.search__validate
    position: absolute
    rem-fallback( width, 18px )
    rem-fallback( height, 18px )
    rem-fallback( top, 14px )
    rem-fallback( right, 14px )
    background url( "images/links/sprite.png" ) -95px -65px
    rem-fallback( padding, 12px )
    border none
    cursor pointer
    rem-fallback( text-indent, 100000px )
    +media-query( screen, max-width 940px )
        rem-fallback( top, 18px )

.size__forms
    width 100%
.size__input
    rem-fallback( width, 72px )
.size__submit
    rem-fallback( width, 194px )
    rem-fallback( margin-left, 16px )
