// - Style for my header
.header__logo, .header__nav-menu
    float left
.header__logo
    +media-query( screen, max-width 940px )
        width 100%
        rem-fallback( width, 200px )
    +media-query( screen, max-width 590px )
        rem-fallback( margin-bottom, 24px )
.header__nav-menu
    rem-fallback( margin-top, 8px )
    +media-query( screen, max-width 940px )
        float none
.header__login-panier, .header__search
    float right
    text-align right
.header__login-panier
    +media-query( screen, max-width 590px )
        width 100%
.header__search
    +media-query( screen, max-width 940px )
        float none
        display block

.header__panier
    position relative
    rem-fallback( min-width, 265px )
    &:before
        content ""
        display block
        position absolute
        rem-fallback( top, 15px )
        rem-fallback( left, -22px )
        rem-fallback( width, 80px )
        rem-fallback( height, 77px )
        background url( "images/links/sprite.png" ) -10px -10px
        +media-query( screen, max-width 590px )
            rem-fallback( left, -16px )
