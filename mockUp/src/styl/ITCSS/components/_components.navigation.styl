// - Style for my navigation
.navigation__header
    rem-fallback( font-size, 21.6px )
    font-family wf_font-heading
    color wf_nav-color
    text-transform uppercase
    text-decoration none
    rem-fallback( margin-right, 12px )
    +media-query( screen, max-width 590px )
        display inline-block
        width 100%
        rem-fallback( margin, 8px 0 )
        text-align center
    &:hover
        color wf_labeur-color
        rem-fallback( padding-bottom, 4px )
        border-bottom 1px solid wf_labeur-color

.navigation__filtre
    rem-fallback( font-size, 18.25px )
    font-weight 200
    color wf_nav-color
    text-transform capitalize
    text-decoration none
    rem-fallback( padding-right, 12px )
    transition( all, 0.25s )
    &:hover
        color wf_nav-color-hover

.navigationElement__footer
    &:after
        content "|"
        font-weight 300
        rem-fallback( padding, 0 8px )

.navigation__footer
    rem-fallback( font-size, 16.8px )
    font-family wf_font-heading
    font-weight 300
    color wf_nav-color
    text-decoration none
    transition( all, 0.25s )
    &:hover
        color wf_nav-color-hover

.navigation__focus
    color wf_nav-color-focus

// - Links for category
.linkCategory
    width 33.33%
    &:hover
        opacity 0.8
        transition( all, 0.25s )
    +media-query( screen, max-width 940px )
        width 100%
        rem-fallback( margin-bottom, 8px )
.linkCategory__figure
    position relative
.linkCategory__figcaption
    display block
    width 100%
    position absolute
    bottom 0
    right 0
    font-family wf_font-heading
    rem-fallback( font-size, 20px )
    color wf_figcation
    rem-fallback( padding, 8px 0 )
    background wf_background-figcaption
    text-align center
