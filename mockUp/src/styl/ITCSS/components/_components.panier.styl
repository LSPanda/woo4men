// - Style for my panier
.panier
    rem-fallback( padding, 0 24px )
.panier__forms
    width 50%

.table
    width 100%
    vertical-align top
td
    rem-fallback( padding, 14px 0 )

//Style for my cells
.table__row--header
    rem-fallback( font-size, 18px )
    text-transform uppercase
.table__row--footer
    rem-fallback( font-size, 22px )
    text-transform uppercase
.table__row--border
    border-top 2px solid wf_border-tableRow
.table__row--boldBorder
    border-top 4px solid wf_border-tableRow

//Width for cells
.table__data--img
    width 30%
    text-align center
.data__img
    width 100%
    rem-fallback( max-width, 182px )
    rem-fallback( max-height, 182px )
.table__data--detail
    width 50%
    vertical-align top
.table__data--total
    width 20%
    vertical-align top
.table__data--price
    position relative
    width 10%
    text-align right
    vertical-align top
.data__price--delete
    position absolute
    right 0
    rem-fallback( bottom, 14px )
