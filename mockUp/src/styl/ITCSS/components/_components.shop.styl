// - Style for my shop
.map__position
    width 100%
    height 60vh

.address__details
    width 25%
    rem-fallback( padding, 0 26px )
    rem-fallback( margin, 8px 0 )
    +media-query( screen, max-width 940px )
        width 50%
    +media-query( screen, max-width 590px )
        width 100%
.address__map
    rem-fallback( margin, 24px 0 0 12px)

.map__icon
    rem-fallback( width, 45px )
    rem-fallback( height, 60px )
    background url( "images/links/sprite.png" ) -10px -100px
.info__tel
    font-style italic
